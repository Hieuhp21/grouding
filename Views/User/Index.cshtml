@{
    ViewData["Title"] = "Users";
}
@model ICollection<WEB_SHOW_WRIST_STRAP.Data.ApplicationUser>

<div class="text-center">
    <h1 class="display-4">Users</h1>
    @if ( @Model != null && @Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
            <tr style="background-color:#888">
                <th scope="col">STT</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Email</th>
                <th scope="col">Edit</th>
            </tr>
            </thead>
            <tbody class="scrollable-tbody">
                @{
                    int i = 1;
                    foreach (var user in Model)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>
                                <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary animationbase" style="height:auto;font-size:12px">EDIT</a>
                            </td>
                        </tr>
                        i++;
                    }
                }
            
            </tbody>
        </table>
    }
</div>

<br/>
<a class="btn btn-primary animationbase" id="Create_new_user" asp-area="Identity" asp-page="/Account/Register">Create new User</a>

