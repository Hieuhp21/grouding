@model WEB_SHOW_WRIST_STRAP.Models.Entities.ListRoom

@{
    ViewData["Title"] = "Delete Area";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    
    <dl class="row">
        <div class="col-md-6">
        <header class="header">
            <h3>Delete Area</h3>
        </header>
        <h4 class="prominent-question">Are you sure you want to delete this?</h4>
        <hr />
        <table class="table table-striped table-bordered">
            <tr>
                <td class="col-sm-2"><strong>Name Area</strong></td>
                <td class="col-sm-10">@Html.DisplayFor(model => model.NameRoom)</td>
            </tr>
            <tr>
                <td class="col-sm-2">@Html.DisplayNameFor(model => model.ListUser)</td>
                <td class="col-sm-10">@Html.DisplayFor(model => model.ListUser)</td>
            </tr>
            <tr>
                <td class="col-sm-2">@Html.DisplayNameFor(model => model.Floor)</td>
                <td class="col-sm-10">@Html.DisplayFor(model => model.Floor)</td>
            </tr>
            <tr>
                <td class="col-sm-2">@Html.DisplayNameFor(model => model.Note)</td>
                <td class="col-sm-10">@Html.DisplayFor(model => model.Note)</td>
            </tr>
        </table>
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRoom" />
        <input type="submit" value="Delete" style="margin-right:5px" class="btn btn-danger btn-create animation" /> 
        <a asp-action="Index" class="btn animation btn-back">Back to List</a>
    </form>
</div>
