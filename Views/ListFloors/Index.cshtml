@model IEnumerable<WEB_SHOW_WRIST_STRAP.Models.Entities.ListFloor>

@{
    ViewData["Title"] = "FLOOR LIST";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .scrollable-tbody td, .scrollable-tbody th {
        width: 25%;
    }
</style>
<header class="header">
    <h1>FLOOR LIST</h1>
</header>
<link rel="stylesheet" href="~/css/listview.css" asp-append-version="true" />
<p>
    <a asp-action="Create" style="margin-top:15px" class="btn btn-success animation">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr style="background-color:#888">
            <th>
               Floor ID
            </th>
            <th>
               Floor Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class="scrollable-tbody">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdFloor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameFloor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFloor" class="btn btn-primary animationbase" style="height:auto;font-size:12px">EDIT</a>
                <a asp-action="Delete" asp-route-id="@item.IdFloor" class="btn btn-danger animationbase" style="height:auto;font-size:12px">DELETE</a>
            </td>
        </tr>
}
    </tbody>
</table>
